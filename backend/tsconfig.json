{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "nodenext",
    "skipLibCheck": true,

    "isolatedModules": true,
    "moduleDetection": "force",
    "outDir": "./dist",

    "strict": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "../common"]
}
