{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "Node16",
    "skipLibCheck": true,

    "moduleResolution": "node16",
    "isolatedModules": true,
    "moduleDetection": "force",
    "outDir": "./dist",

    /* Linting */
    "strict": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "../common"]
}
